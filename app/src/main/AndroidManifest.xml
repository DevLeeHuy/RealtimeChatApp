<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hcmute.spkt.truongminhhoang.zaloclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZaloClone">
        <activity
            android:name=".view.ui.MessageActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.SplashActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>