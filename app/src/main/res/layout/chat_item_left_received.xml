<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_chat_time_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:text="@string/_9_00_pm"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_chat_image_received"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_chat_time_received"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp" />


    <TextView
        android:id="@+id/tv_chat_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_chat_image_received"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_left_receiver"
        android:maxWidth="250dp"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chat_received"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />
</RelativeLayout>